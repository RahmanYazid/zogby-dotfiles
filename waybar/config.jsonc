            "3": [],
            "4": [],
            "5": []
        }
    },

    "hyprland/window": {
        "format": "{title}",
        "max-length": 50,
        "separate-outputs": true
    },

    "clock": {
        "format": "Û∞Öê {:%H:%M}",
        "format-alt": "Û∞∏ó {:%A, %B %d, %Y}",
