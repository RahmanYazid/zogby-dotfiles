{
    "layer": "top",
    "position": "top",
    "height": 35,
    "spacing": 2,
    "margin-top": 8,
    "margin-left": 12,
    "margin-right": 12,
    "margin-bottom": 0,
    
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["tray", "cpu", "memory","pulseaudio","network"],

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "Û∞≤†",
            "2": "Û∞≤¢",
            "3": "Û∞≤§",
            "4": "Û∞≤¶",
            "5": "Û∞≤®",
            "6": "Û∞≤™",
            "7": "Û∞≤¨",
            "8": "Û∞≤Æ",
            "9": "Û∞≤∞",
            "10": "Û∞ø¨"
        },
        "persistent_workspaces": {
